<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SettingFragment">

    <TextView
        android:id="@+id/tv_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FILTER"
        android:textSize="20sp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/tv_filter"
        />

    <TextView
        android:id="@+id/lb_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        />

    <TextView
        android:id="@+id/choice_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="value"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/lb_category"
        />

    <TextView
        android:id="@+id/lb_ratting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie with rate from"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/choice_category"
        />

    <TextView
        android:id="@+id/choice_ratting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="value"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/lb_ratting"
        />

    <TextView
        android:id="@+id/lb_release_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From Release year"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/choice_ratting"
        />

    <TextView
        android:id="@+id/choice_release_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="value"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/lb_release_year"
        />

    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SORT"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/choice_release_year"
    />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/tv_sort"
        />

    <TextView
        android:id="@+id/lb_sort_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort By"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        />

    <TextView
        android:id="@+id/choice_sort_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="value"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/lb_sort_by"
        />


</androidx.constraintlayout.widget.ConstraintLayout>